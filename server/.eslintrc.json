{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "ignorePatterns": ["/config/*.js", "/migrations/*.js", "/models/*.js", "/seeders/*.js"],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "no-unused-vars": ["warn", { "vars":"local" }],
        "radix": ["error", "as-needed"]
    }
}
